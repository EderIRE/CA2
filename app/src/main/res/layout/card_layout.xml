<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_margin="5dp"
    app:cardBackgroundColor="@color/black"
    app:cardCornerRadius="12dp"
    app:cardElevation="3dp"

    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/relativeLayout"
        >

        <ImageView
            android:id="@+id/item_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:scaleType="centerCrop"/>


        <TextView
            android:id="@+id/item_title"
            android:layout_width="wrap_content"
            android:layout_height="39dp"
            app:layout_constraintTop_toBottomOf="@+id/item_image"
            android:layout_marginTop="16dp"
            android:textSize="15dp"
            android:paddingLeft="10dp"
            android:textColor="@color/white"

            />

        <ImageView
            android:id="@+id/item_parental_control"
            android:layout_width="39dp"
            android:layout_height="39dp"
            app:layout_constraintTop_toBottomOf="@+id/item_image"
            app:layout_constraintLeft_toRightOf="@+id/item_title"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="10dp"
            />

        <TextView
            android:id="@+id/item_starring_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Starring "
            app:layout_constraintTop_toBottomOf="@+id/item_title"
            android:paddingLeft="10dp"
            android:textStyle="bold"
            android:textColor="@color/white"

            />

        <TextView
            android:id="@+id/item_starring"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="22dp"
            app:layout_constraintTop_toBottomOf="@+id/item_title"
            app:layout_constraintLeft_toRightOf="@+id/item_starring_message"
            android:textColor="#808080"
            android:textSize="12dp"
            />

        <TextView
            android:id="@+id/item_run_time_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Running Time "
            app:layout_constraintTop_toBottomOf="@+id/item_starring"
            android:paddingLeft="10dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            />

        <TextView
            android:id="@+id/item_run_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/item_starring"
            app:layout_constraintLeft_toRightOf="@+id/item_run_time_message"
            android:textColor="#808080"

            />

        <TextView
            android:id="@+id/item_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/item_run_time"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textColor="@color/white"

            />

        <TextView
            android:id="@+id/item_seats"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Seats"
            android:layout_marginStart="16dp"
            android:layout_marginTop="25dp"
            app:layout_constraintTop_toBottomOf="@+id/item_detail"
            android:paddingLeft="10dp"
            android:paddingBottom="16dp"
            android:textColor="@color/white"

            />

        <ImageView
            android:id="@+id/item_minus"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="25dp"
            app:layout_constraintTop_toBottomOf="@+id/item_detail"
            app:layout_constraintLeft_toRightOf="@+id/item_seats"
            android:src="@drawable/ic_minus"
            android:padding="2dp"

            />

        <TextView
            android:id="@+id/item_seats_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:layout_marginStart="16dp"
            android:layout_marginTop="25dp"
            app:layout_constraintTop_toBottomOf="@+id/item_detail"
            app:layout_constraintLeft_toRightOf="@+id/item_minus"
            android:textColor="@color/white"
            />

        <ImageView
            android:id="@+id/item_plus"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:text="Select Seats"
            android:layout_marginStart="16dp"
            android:layout_marginTop="25dp"
            app:layout_constraintTop_toBottomOf="@+id/item_detail"
            app:layout_constraintLeft_toRightOf="@+id/item_seats_num"
            android:layout_marginLeft="25dp"
            android:src="@drawable/ic_round_add_circle_24"

            />

        <ImageView
            android:id="@+id/image_seat"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="25dp"
            app:layout_constraintTop_toBottomOf="@+id/item_detail"
            app:layout_constraintLeft_toRightOf="@+id/item_plus"
            android:src="@drawable/ic_round_event_seat_24"

            />

        <TextView
            android:id="@+id/item_seats_ramin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5 Seats remaining"
            android:layout_marginStart="10dp"
            android:layout_marginTop="25dp"
            app:layout_constraintTop_toBottomOf="@+id/item_detail"
            app:layout_constraintLeft_toRightOf="@+id/image_seat"
            android:textColor="@color/white"
            />





    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>